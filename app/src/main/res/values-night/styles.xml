<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Set AppCompatâ€™s colors -->
        <item name="colorPrimary">#FFE57373</item>
        <item name="colorAccent">#FFE57373</item>
        <item name="colorPrimaryContainer">#80E57373</item>
        <item name="android:textColorHighlight">#FFE57373</item>

        <!-- Do not use primary colored elevation overlays to present a visual hierarchy - TOO COLORFUL  -->
        <item name="elevationOverlayEnabled">false</item>

        <!-- Material Alert Dialog Theming -->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>

        <!-- Don't show light status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
